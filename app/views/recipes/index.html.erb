<section class="recipe-page">
  <div>
    <%= render 'shared/navbar' %>
  </div>

  <div class="main-page">
    <!---------- main list ------------->
    <div class="sub-page">
      <h2>My Recipes</h2>
      <!---------- add recipe button ------------->
      <div class="add-rep">
        <%= link_to new_recipe_path do %>
          <i class="fa-solid fa-plus"></i>
          add recipe
        <% end %>
      </div>

      <!---------- recipe list ------------->
      <div class="list-item">
        <% if @recipes.empty? %>
          <div class="empty">
            <%= image_tag('notfound.svg') %>
            <span>No recipes. Create one now!!!</span>
          </div>
        <% else %>
          <% @recipes.each do |recipe| %>
            <div class="list-col">
              <div class="row">
                <%= link_to recipe.name, recipe_path(recipe.id), class: 'name' %>
                <%= link_to recipes_path, class: 'btn-del', method: :delete do %>
                  <i class="fa-solid fa-trash"></i>
                  delete
                <% end %>
              </div>
              <div class="desc">
                <span> <%= recipe.description %> </span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>
