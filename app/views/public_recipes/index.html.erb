<section class="public-page">
  <div>
    <%= render 'shared/navbar' %>
  </div>

  <div class="main-page">
    <!---------- main list ------------->
    <div class="sub-page">
      <h2>My Public Recipes</h2>
      <!---------- recipe list ------------->
      <div class="list-item">
        <% @recipes.each do |recipe| %>
          <%= link_to recipe_path(recipe.id) do %>
            <div class="list-col">
              <div class="row">
                <p> <%= recipe.name %> </p>
                <span>By: <%= recipe.user.name %> </span>

                <% if recipe.user_id == current_user %>
                  <%= link_to recipes_path, class: 'btn-del', method: :delete do %>
                    <i class="fa-solid fa-trash"></i>
                    delete
                  <% end %>
                <% end %>
              </div>

              <div class="count">
                <span>Total food items: <%= recipe.recipe_foods.count %> </span>
                <span>Total price: $<%= @total %> </span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>