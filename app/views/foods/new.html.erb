<section class="food-page">
  <div class="main-page">
    <div class="back-ico">
      <%= link_to foods_path do %>
        <i class="fa-solid fa-circle-arrow-left fa-2xl" style="color: #ffffff;"></i>
      <% end %>
    </div>

    <div class="new-texture">
      <div class="col-texture">
        <h2>New Food</h2>
        <%= form_with model: @food, url: foods_path, local: true, method: :post do |f| %>
          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>
          <div class="field">
            <%= f.label :measure_unit, "Measuring Unit" %><br />
            <%= f.text_field :measure_unit, autofocus: true, autocomplete: "measure_unit" %>
          </div>
          <div class="field">
            <%= f.label :price %><br />
            <%= f.text_field :price, autofocus: true, autocomplete: "price" %>
          </div>

          <div class="actions">
            <%= f.submit class: 'btn-submit' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>